@model NovoRad.Models.Anexo

@{
    ViewData["Title"] = "Apagando Evidência";
}

<h3>Apagar anexo?</h3>
<a asp-action="Index">Voltar</a>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Anexo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeAnexoUpload)
        </dd>
        <dt class="col-sm-2">
            Data:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAnexo)
        </dd>
        <dt class="col-sm-2">
            Autor:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-ocorrenciaId="@ViewBag.OcorrenciaId">
        <input type="hidden" asp-for="AnexoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>