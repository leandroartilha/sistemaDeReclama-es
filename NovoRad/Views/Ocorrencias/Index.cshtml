@model IEnumerable<NovoRad.Models.Ocorrencia>

@{
    ViewData["Title"] = "Index";
}

<button onclick="location.href='/'" type="button" class="btn btn-link">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
    </svg> Voltar ao Início
</button>
<table class="table table-hover alert-primary" style="border-radius: 1rem" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Rad</th>
            <th scope="col">Status</th>
            <th scope="col">Título</th>
            <th scope="col">Data Abertura</th>
            <th scope="col">UF</th>
            <th scope="col">Classificação</th>
            <th scope="col">Ambiente</th>
            <th scope="col">Editar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.OcorrenciaId)</th>
                <td>@Html.DisplayFor(modelItem => item.Status.NomeStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.DataInicio)</td>
                <td>@Html.DisplayFor(modelItem => item.UF)</td>
                <td>@Html.DisplayFor(modelItem => item.Classificacao.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Ambiente.Nome)</td>
                <td>
                    <a class="btn text-danger" asp-action="Edit" asp-route-id="@item.OcorrenciaId">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/pt-BR.json"
                }
            });
        });
    </script>
}
